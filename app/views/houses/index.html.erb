<div class="container">
  <h1 id="title">List of Properties</h1>

  <div class="cards">
    <% @houses.each do |house| %>
      <div class="house-card">
        <%= image_tag "houses/#{house.photo}", class: "img" %><br>
        <h7>Â£<%= house.price%></h7>
        <p><%= house.address%></p>
        <p>Bedrooms: <%= house.bedroom%></p>
        <p>Bathroom: <%= house.bathroom%></p>
        <h8><%= link_to 'See Property', area_house_path(house.area_id, house),class: "btn-ghost"%></h8>
