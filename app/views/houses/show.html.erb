 <div class="row">
  <div class="col-8"><h1 id="title">Property Details</h1>
  <br>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "shoreditch/boxpark.jpg", class: "d-block w-100 area-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "shoreditch/boxpark.jpg", class: "d-block w-100 area-img" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "shoreditch/boxpark.jpg", class: "d-block w-100 area-img" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
      <div class= "items">
        <div class="card-category">
        </div>
        <div class="card-category">
        <br>
          <ul>
            <p> Price: £<%= @house.price%></p>
             <p> Address: <%= @house.address%></p>
             <p>Postcode: <%= @house.postcode %></p>
             <p>Bedrooms: <%= @house.bedroom %></p>
             <p> Bathrooms: <%= @house.bathroom%> </p>
             <p> Description: <%= @house.description%> </p>
             <p> Square Feet: <%= @house.square_feet%> </p>
             <p> Council Tax: </p>
             <% @house.council_tax["council_tax"].each do |band, value| %>
              <p><%= band %>: £<%= value %></p>
             <% end %>
             <p> Green Belt: <%= @house.green_belt%> </p>
          </ul>
          <br>
      </div>
    </div>
    <br>
</div>
<br>
<div class = "col-4"
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>


