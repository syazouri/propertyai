    <div class="area-show-container">
      <h2>Crime Rate</h2>

        <%= bar_chart @area.crime["types"], title: "Breakdown of crime by type",  xtitle: "per 1000 population", ytitle: "Type of Crime" %>

        <p class="text-center"><%="Crime Type Definitions" %> <%= link_to "" , "https://www.met.police.uk/sd/stats-and-data/met/crime-type-definitions/", target: "_blank", class: "fas fa-info-circle", data: { toggle: "tooltip"}, title: "Crime Type Definitions"  %></p>

    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-6">
          <div>
          <h2>Crime Overview</h2>
          <p><%= "Crime Rating: #{@area.crime['crime_rating']}" %> <%= "Crime Rating: #{@area.crime['crime_rating']}" %></p><br>
          <p><%= "Number of crimes in last 12 months: #{@area.crime['crimes_last_12m']}" %></p><br>
          <p><%= "Number of crimes crimes per thousand: #{@area.crime['crimes_per_thousand']}" %></p>
        </div>
        </div>

        <div class="col-xs-12 col-md-6 col-lg-6">
        <div>
        <h2>Observations</h2>
        <ul>
        <% @area.crime["observations"].each do |ob| %>
        <li> <%= ob %></li>
        <% end %>
        </ul>
        </div>
      </div>
        </div>
      </div>
    </div>

