<div class="container">
  <%= simple_form_for(search) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs">
      <%= f.input :gross_annual %>
    </div>
    <button type="button" id="multiply">Calculate</button>
    <input type="hidden" id="max-mortgage" name="max-mortgage">
    <div class="form-inputs">
    <%= f.input :distance_to_work, as: :integer %>
    </div>
    <div class="form-inputs">
    <%= f.input :work_postcode %>
    </div>
    <div class="form-actions">
    <%= f.button :submit %>
    </div>
  <% end %>
</div>



