<div class="container">
  <%= simple_form_for(search) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs h5">
      <%= f.input :gross_annual, as: :integer,  placeholder: "e.g. 45000" %>
    </div>
    <div class="form-inputs h5">
      <%= f.input :deposit, as: :integer,  placeholder: "e.g. 5000" %>
    </div>
    <div class="form-inputs h5">
    <%= f.input :school, placeholder: "e.g. outstanding" %>
    </div>
    <div class="form-inputs h5">
      <%= f.input :distance_to_work, placeholder: "in miles" %>
    </div>
    <div class="form-inputs h5">
      <%= f.input :work_postcode, placeholder: "E2 8DY" %>
    </div>
    <%= f.button :submit, class: "btn-ghost" %>
  <% end %>
  <br>
</div>



